{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["Feat", "Fix", "Docs", "Style", "Refactor", "Test", "Chore", "Design", "Rename", "Remove"]
    ],
    "type-case": [2, "always", "pascal-case"],
    "subject-case": [0, "never", []]
  }
}
